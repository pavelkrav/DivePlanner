<Window x:Name="DivePlanner" x:Class="DivePlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DivePlanner"
        mc:Ignorable="d"
        Title="Dive Planner" Height="500" Width="750"
        MinHeight="500" MinWidth="750">
    <Grid x:Name="WindowGrid" >
        <Grid x:Name="InfoGrid" >
            <Button Name="CalculateAcsentButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnCalculateAcsentButtonClick" ClickMode="Release" Content="Calculate ascent">
            </Button>

            <Button Name="CalculateEmergencyAcsentButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnCalculateEmergencyAcsentButtonClick" ClickMode="Release" Content="Emergency ascent">
            </Button>

            <Label Name="DepthTextBoxLabel">Depth</Label>
            <TextBox Name="DepthTextBox"></TextBox>

            <Label Name="TimeTextBoxLabel">Time</Label>
            <TextBox Name="TimeTextBox"></TextBox>

            <Button Name="ApplyPointButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnApplyPointButtonClick" ClickMode="Release" Content="Apply">
            </Button>

            <Button Name="AddPointByInfoButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnAddPointByInfoButtonClick" ClickMode="Release" Content="Add">
            </Button>
        </Grid>
        <Grid x:Name="MenuGrid">
            <Button Name="PointInfoButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnPointInfoButtonClick" ClickMode="Release" Content="Points info">
            </Button>

            <Button Name="AddPointButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnAddPointButtonClick" ClickMode="Release" Content="Add points">
            </Button>

            <Button Name="DeletePointButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnDeletePointButtonClick" ClickMode="Release" Content="Delete points">
            </Button>

            <Label Name="MaxDepthTextBoxLabel">Max.Depth</Label>
            <TextBox Name="MaxDepthTextBox"></TextBox>

            <Label Name="MaxTimeTextBoxLabel">Time</Label>
            <TextBox Name="MaxTimeTextBox"></TextBox>

            <Label Name="AltitudeTextBoxLabel">Altitude</Label>
            <TextBox Name="AltitudeTextBox"></TextBox>

            <Button Name="UpdateDiveInfoButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnUpdateDiveInfoButtonClick" ClickMode="Release" Content="Update">
            </Button>

            <Button Name="RestrictDiveInfoButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnRestrictDiveInfoButtonClick" ClickMode="Release" Content="Restrict">
            </Button>
        </Grid>
        <Grid x:Name="GraphGrid">
            <Button Name="MenuButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnMenuButtonClick" ClickMode="Release" Content="-&gt;">
            </Button>

            <Button Name="InfoButton" Background="LightGray" 
             BorderBrush="Black" BorderThickness="0" 
             Click="OnInfoButtonClick" ClickMode="Release" Content="&lt;-">
                
            </Button>
        </Grid>
    </Grid>
</Window>
